<%==
{
  type: "bar",
  data: {
    labels: @time_labels,
    datasets: [
      {
        label: t("stats.labels.created"),
        data: @actions_created_last30days_array,
        backgroundColor: "#9933cc",
        borderColor: "#8010a0"
      },
      {
        label: t("stats.labels.completed"),
        data: @actions_done_last30days_array,
        backgroundColor: "#0066cc",
        borderColor: "#0066cc"
      },
      {
        type: "line",
        label: t("stats.labels.avg_created"),
        data: @created_count_array,
        borderColor: "#00ff00",
        borderWidth: 3,
        pointRadius: 0
      },
      {
        type: "line",
        label: t("stats.labels.avg_completed"),
        data: @done_count_array,
        borderColor: "#ff0000",
        borderWidth: 3,
        pointRadius: 0
      }
    ]
  },
  options: {
    title: {
      display: true,
      text: t("stats.actions_30days_title")
    },
    legend: {
      labels: {
        boxWidth: 10
      }
    },
    scales: {
      xAxes: [{
        scaleLabel: {
          display: true,
          labelString: t("stats.legend.number_of_days")
        }
      }],
      yAxes: [{
        ticks: {
          min: 0,
          max: @max + @max/10 + 1
        },
        scaleLabel: {
          display: true,
          labelString: t("stats.legend.number_of_actions")
        }
      }]
    },
    responsive: false
  }
}.to_json
